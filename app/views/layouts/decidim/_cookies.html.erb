<%= javascript_include_tag "decidim/cookies/cookies" %>

<% if cookies_accepted? %>
  <%= javascript_include_tag "decidim/cookies/revoke_cookies_acceptance" %>
<% else %>
  <%= stylesheet_link_tag "decidim/cookies/cookies" %>
  <script type="text/javascript" charset="utf-8">
      <% if current_organization.logo.present? %>
      window.orejimeConfig.logo = {
          src: "<%= current_organization.logo.medium.url %>",
          alt: "Logo organization"
      };
      <% end %>

      window.orejimeConfig.translations["<%= I18n.locale %>"] = {
        consentModal: {
            description: "<%= t("decidim.components.cookies.modal.description") %>",
        },
        purposes: {
            analytics: "<%= t("decidim.components.cookies.modal.purposes.analytics") %>",
            security: "<%= t("decidim.components.cookies.modal.purposes.security") %>",
            ads: "<%= t("decidim.components.cookies.modal.purposes.ads") %>",
            tracking: "<%= t("decidim.components.cookies.modal.purposes.tracking") %>",
            checking: "<%= t("decidim.components.cookies.modal.purposes.checking") %>"
        }
      }
  </script>
<% end %>
